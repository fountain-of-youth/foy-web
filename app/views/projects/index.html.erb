<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr class="<%= project.updated? ? 'success' : 'error' %>">
        <td><%= link_to project.title, project %></td>
        <td></td>
        <td>
          <div class="btn-toolbar">
            <div class="btn-group">
              <%= link_to 'Edit', [:edit, project], class: 'btn btn-mini' %>
            </div>
            <div class="btn-group">
              <%= link_to 'Delete', "#", method: 'delete', data: {confirm: 'Are you sure?'}, class: 'btn btn-mini btn-danger' %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add project', new_project_path, :class => 'btn btn-primary' %>
